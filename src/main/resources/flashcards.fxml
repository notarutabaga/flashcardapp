<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <Pane fx:id="answerPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;">
         <children>
            <TextArea fx:id="cardAnswer" editable="false" focusTraversable="false" layoutX="100.0" layoutY="65.0" prefHeight="223.0" prefWidth="400.0" stylesheets="@stylesheet.css" text="answer" wrapText="true">
               <font>
                  <Font name="Constantia" size="36.0" />
               </font>
            </TextArea>
            <JFXButton fx:id="greenButton" focusTraversable="false" layoutX="100.0" layoutY="308.0" onAction="#clickedGreen" prefHeight="27.0" prefWidth="120.0" style="-fx-background-color: #ddedea;" text="I knew it">
               <font>
                  <Font name="Constantia" size="14.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="yellowButton" focusTraversable="false" layoutX="240.0" layoutY="308.0" onAction="#clickedYellow" prefHeight="27.0" prefWidth="120.0" style="-fx-background-color: #fcf4dd;" text="I almost knew it">
               <font>
                  <Font name="Constantia" size="14.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="redButton" focusTraversable="false" layoutX="380.0" layoutY="308.0" onAction="#clickedRed" prefHeight="27.0" prefWidth="120.0" style="-fx-background-color: #fce1e4;" text="I didn't know it">
               <font>
                  <Font name="Constantia" size="14.0" />
               </font>
            </JFXButton>
         </children>
      </Pane>
      <Pane fx:id="questionPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" visible="false">
         <children>
            <TextArea fx:id="cardQuestion" editable="false" focusTraversable="false" layoutX="100.0" layoutY="65.0" prefHeight="223.0" prefWidth="400.0" stylesheets="@stylesheet.css" text="question" wrapText="true">
               <font>
                  <Font name="Constantia" size="36.0" />
               </font>
            </TextArea>
            <JFXButton fx:id="blueButton" layoutX="228.0" layoutY="308.0" onAction="#seeAnswer" prefHeight="27.0" prefWidth="144.0" style="-fx-background-color: #daeaf6;" text="See answer">
               <font>
                  <Font name="Constantia" size="14.0" />
               </font>
            </JFXButton>
         </children>
      </Pane>
      <Pane fx:id="menuPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;">
         <children>
            <JFXButton fx:id="startButton" focusTraversable="false" layoutX="240.0" layoutY="320.0" onAction="#startGame" style="-fx-border-color: #ffafcc; -fx-border-width: 3; -fx-border-radius: 10;" text="START">
               <font>
                  <Font name="Century Schoolbook" size="24.0" />
               </font>
            </JFXButton>
            <Text layoutX="163.0" layoutY="61.0" strokeType="OUTSIDE" strokeWidth="0.0" text="FLASH">
               <font>
                  <Font name="Century Schoolbook Bold Italic" size="48.0" />
               </font>
            </Text>
            <Text layoutX="341.0" layoutY="62.0" strokeType="OUTSIDE" strokeWidth="0.0" text="cards">
               <font>
                  <Font name="Century Schoolbook Italic" size="36.0" />
               </font>
            </Text>
            <JFXButton fx:id="newSetButton" focusTraversable="false" layoutX="197.0" layoutY="227.0" onAction="#makeNewSet" style="-fx-border-color: #ffafcc; -fx-border-width: 3; -fx-border-radius: 10;" text="Create new set">
               <font>
                  <Font name="Century Schoolbook" size="24.0" />
               </font>
            </JFXButton>
         </children>
      </Pane>
      <Pane fx:id="newSetPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;">
         <children>
            <TextField fx:id="fillName" focusTraversable="false" layoutX="120.0" layoutY="31.0" prefHeight="27.0" prefWidth="315.0" promptText="Set Name">
               <font>
                  <Font name="Century Schoolbook" size="14.0" />
               </font>
            </TextField>
            <JFXButton fx:id="saveCardButton" focusTraversable="false" layoutX="120.0" layoutY="316.0" onAction="#saveCard" style="-fx-border-color: #ffafcc; -fx-border-width: 3; -fx-border-radius: 10;" text="Save card">
               <font>
                  <Font name="Century Schoolbook" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="saveSetButton" focusTraversable="false" layoutX="302.0" layoutY="316.0" onAction="#saveSet" prefHeight="42.0" prefWidth="178.0" style="-fx-border-color: #ffafcc; -fx-border-width: 3; -fx-border-radius: 10;" text="Save set">
               <font>
                  <Font name="Century Schoolbook" size="18.0" />
               </font>
            </JFXButton>
            <TextArea fx:id="fillQuestion" focusTraversable="false" layoutX="120.0" layoutY="72.0" prefHeight="108.0" prefWidth="360.0" promptText="Question">
               <font>
                  <Font name="Century Schoolbook" size="24.0" />
               </font>
            </TextArea>
            <TextArea fx:id="fillAnswer" focusTraversable="false" layoutX="120.0" layoutY="192.0" prefHeight="108.0" prefWidth="360.0" promptText="Answer">
               <font>
                  <Font name="Century Schoolbook" size="24.0" />
               </font>
            </TextArea>
            <Text fx:id="numCards" layoutX="449.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
               <font>
                  <Font name="Century Schoolbook" size="24.0" />
               </font>
            </Text>
         </children>
      </Pane>
   </children>
</AnchorPane>
